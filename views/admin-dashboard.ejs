  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.getElementById('sidebar');
      const sidebarToggle = document.getElementById('sidebar-toggle');
      const mainContent = document.getElementById('main-content');
      const userDropdownBtn = document.getElementById('user-dropdown-btn');
      const userDropdown = document.getElementById('user-dropdown');
      const contentFrame = document.getElementById('content-frame');
      const dashboardContent = document.getElementById('dashboard-content');
      const pageTitle = document.getElementById('page-title');
      const sidebarLinks = document.querySelectorAll('.sidebar-link:not(.sidebar-dropdown-toggle)');
      const sidebarDropdownToggles = document.querySelectorAll('.sidebar-dropdown-toggle');
      const sidebarDropdownLinks = document.querySelectorAll('.sidebar-dropdown-link');
      const quickActionLinks = document.querySelectorAll('.action-item');

      // Toggle sidebar
      sidebarToggle.addEventListener('click', function() {
        sidebar.classList.toggle('collapsed');
        mainContent.classList.toggle('expanded');
      });

      // Toggle user dropdown
      userDropdownBtn.addEventListener('click', function() {
        userDropdown.classList.toggle('active');
      });

      // Close user dropdown when clicking outside
      document.addEventListener('click', function(event) {
        if (!userDropdown.contains(event.target)) {
          userDropdown.classList.remove('active');
        }
      });

      // Toggle sidebar dropdown menus
      sidebarDropdownToggles.forEach(toggle => {
        toggle.addEventListener('click', function(e) {
          e.preventDefault();
          const parent = this.parentElement;
          parent.classList.toggle('active');
        });
      });

      // Handle sidebar link clicks
      function handlePageNavigation(pageName, event) {
        if (event) event.preventDefault();

        // Update active link
        sidebarLinks.forEach(link => link.classList.remove('active'));
        sidebarDropdownLinks.forEach(link => link.classList.remove('active'));
        
        if (event && event.currentTarget) {
          event.currentTarget.classList.add('active');
        }

        // Update page title
        pageTitle.textContent = pageName.charAt(0).toUpperCase() + pageName.slice(1).replace(/-/g, ' ');

        // Handle special cases
        if (pageName === 'dashboard') {
          contentFrame.style.display = 'none';
          dashboardContent.style.display = 'block';
          return;
        }

        // For regional pages, we need the region parameter
        let url;
        if (pageName === 'regional' && event && event.currentTarget.dataset.region) {
          const region = event.currentTarget.dataset.region;
          url = `/admin-regional?region=${encodeURIComponent(region)}&dashboard=true`;
          pageTitle.textContent = `${region} Posts`;
        } else {
          // Map page names to URLs
          const pageUrls = {
            'posts': '/index',
            'create-post': '/create-post',
            'categories': '/categories',
            'manage-categories': '/manage-categories',
            'manage-accounts': '/manage-accounts',
            'user-profiles': '/admin/user-profiles',
            'manage-registrations': '/manage-registrations',
            'backups': '/manage-backups'
          };
          
          url = pageUrls[pageName] || `/${pageName}`;
          
          // Add dashboard parameter to all URLs
          url += (url.includes('?') ? '&' : '?') + 'dashboard=true';
        }

        // Show iframe and load content
        dashboardContent.style.display = 'none';
        contentFrame.style.display = 'block';
        contentFrame.src = url;

        // On mobile, collapse sidebar after selection
        if (window.innerWidth < 992) {
          sidebar.classList.add('collapsed');
          mainContent.classList.add('expanded');
        }
      }

      // Assign click handlers to sidebar links
      sidebarLinks.forEach(link => {
        if (!link.classList.contains('sidebar-dropdown-toggle')) {
          link.addEventListener('click', function(e) {
            const page = this.dataset.page;
            if (page) {
              handlePageNavigation(page, e);
            }
          });
        }
      });

      // Assign click handlers to dropdown links
      sidebarDropdownLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const page = 'regional';
          handlePageNavigation(page, e);
        });
      });

      // Assign click handlers to quick action links
      quickActionLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const page = this.dataset.page;
          if (page) {
            // Find and activate the corresponding sidebar link
            const sidebarLink = document.querySelector(`.sidebar-link[data-page="${page}"]`);
            if (sidebarLink) {
              sidebarLink.click();
            } else {
              handlePageNavigation(page, e);
            }
          }
        });
      });

      // Handle hash navigation
      function handleHashChange() {
        const hash = window.location.hash.substring(1);
        if (hash && hash !== 'dashboard') {
          // Find and activate the corresponding sidebar link
          const sidebarLink = document.querySelector(`.sidebar-link[data-page="${hash}"]`);
          if (sidebarLink) {
            sidebarLink.click();
          } else {
            handlePageNavigation(hash);
          }
        } else {
          // Default to dashboard
          handlePageNavigation('dashboard');
        }
      }

      // Check hash on page load
      handleHashChange();

      // Listen for hash changes
      window.addEventListener('hashchange', handleHashChange);
    });
  </script>
